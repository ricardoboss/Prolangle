		}

		return builder.ToString();
	}

}

<Button @onclick="OnClicked">
	@ChildContent
</Button>

<Snackbar @ref="snackbar">
	<SnackbarBody>
		@snackbarMessage
	</SnackbarBody>
</Snackbar>
